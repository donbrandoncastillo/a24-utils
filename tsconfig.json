{
  "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
  ]
}